---
import BaseLayout from './BaseLayout.astro';
import TitleBlock from '../components/TitleBlock.astro';
import ProjectButtons from '../components/ProjectButtons.astro';
import { Picture } from 'astro-imagetools/components';
const { content } = Astro.props;
---

<BaseLayout
  title={content.name}
  description={content.desc}
  image={content.cover}
>
  <TitleBlock title={content.name} subtitle={content.date} />
  <ProjectButtons
    color={content.color}
    cta={content.cta}
    secondary={content.secondary}
  />

  <Picture
    src={content.cover}
    alt={`Screenshot of ${content.name}`}
    attributes={{
      img: {
        class: 'rounded-3xl mt-[-0.775rem] mb-10',
      },
    }}
  />

  <article
    class="prose prose-headings:md dark:prose-invert prose-code:before:content-none prose-code:after:content-none prose-lead:"
  >
    <slot />
  </article>
</BaseLayout>
